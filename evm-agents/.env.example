# Li.Fi API Key (required)
# Get your API key from https://docs.li.fi/li.fi-api/get-api-keys
LIFI_API_KEY=your_lifi_api_key_here

# Wallet Configuration (required for executing transactions)
# WARNING: Never commit your actual private key to version control
PRIVATE_KEY=your_wallet_private_key_here

# RPC URLs for different EVM chains
# At minimum, you need an RPC URL for the chains you plan to interact with
RPC_URL=https://mainnet.infura.io/v3/your_infura_key_here
RPC_URL_1=https://mainnet.infura.io/v3/your_infura_key_here
RPC_URL_137=https://polygon-rpc.com
RPC_URL_42161=https://arb1.arbitrum.io/rpc
RPC_URL_10=https://mainnet.optimism.io
RPC_URL_8453=https://mainnet.base.org

# Server Configuration
PORT=3001

# Logging Configuration (optional)
LOG_LEVEL=info

# Gas Price Configuration (optional)
# These override the default gas price settings if specified
MAX_GAS_PRICE_GWEI=100
GAS_PRICE_MULTIPLIER=1.1

# Transaction Configuration (optional)
DEFAULT_SLIPPAGE=0.5
MAX_SLIPPAGE=3.0
